            <input type="hidden" asp-for="LocationHall" />
            <div>Номер хола = @ViewBag.LocationHall</div>
            <input type="hidden" asp-for="LocationSlide" />
            <div>Номер гірки = @ViewBag.LocationSlide</div>
            <input type="hidden" asp-for="LocationType" />
            <div>Тип локації = @ViewBag.LocationType</div>
            @*<div class="form-group">
                <label asp-for="LocationHall" class="control-label"></label>
                <select asp-for="LocationHall" class="form-control" asp-items="ViewBag.LocationHall"></select>
                <span asp-validation-for="LocationHall" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationSlide" class="control-label"></label>
                <select asp-for="LocationSlide" class="form-control" asp-items="ViewBag.LocationSlide"></select>
                <span asp-validation-for="LocationSlide" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationType" class="control-label"></label>
                <select asp-for="LocationType" class="form-control" asp-items="ViewBag.LocationType"></select>
                <span asp-validation-for="LocationType" class="text-danger"></span>
            </div>*@
            <input type="hidden" asp-for="TicketOwner" />
            <div>Власник = @ViewBag.TicketOwner</div>
            <div class="form-group">
                <label asp-for="TicketStatus" class="control-label"></label>
                <select asp-for="TicketStatus" class="form-control" asp-items="ViewBag.TicketStatus"></select>
                <span asp-validation-for="TicketStatus" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" step="any" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>*@
            <input type="hidden" asp-for="Price" />
            <div>Вартість = @ViewBag.Price</div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку квитків</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
