@model AquaparkWebApplication1.Models.Pool

@{
    ViewData["Title"] = "Деталі";
}

<h1>Детальна інформація про локацію</h1>

<div>
    <h4>Басейн</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PoolDepth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PoolDepth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PoolMinHeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PoolMinHeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WaterType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WaterType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HallNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HallNavigation.HallId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PoolId">Редагувати басейн</a> |
    <a asp-controller="Halls" asp-action="Details" asp-route-id="@Model?.Hall">Повернутись до басейнів холу №@Html.DisplayFor(model => model.Hall)</a>
</div>
