@model AquaparkWebApplication1.Models.Ticket

@{
    ViewData["Title"] = "Деталі";
}

<h1>Детальна інформація про квиток</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationHall)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Halls" asp-action="Details" asp-route-id="@Model?.LocationHall">@Html.DisplayFor(model => model.LocationHall)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationSlide)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Slides" asp-action="Details" asp-route-id="@Model?.LocationSlide">@Html.DisplayFor(model => model.LocationSlide)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketOwner)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Visitors" asp-action="Details" asp-route-id="@Model?.TicketOwner">@Html.DisplayFor(model => model.TicketOwner)</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TicketId">Редагувати квиток</a> |
    <a asp-action="Index">Повернутись до списку квитків</a>
</div>
