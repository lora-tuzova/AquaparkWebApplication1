@model AquaparkWebApplication1.Models.Ticket

@{
    ViewData["Title"] = "Видалення квитка";
}

<h1>Видалити квиток</h1>

<h3>Ви впевнені, що хочете видалити цей квиток?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationHall)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationHall)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationSlide)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationSlide)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location.HallId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationNavigation.SlideId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketOwnerNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketOwnerNavigation.VisitorId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TicketId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись до списку квитків</a>
    </form>
</div>
