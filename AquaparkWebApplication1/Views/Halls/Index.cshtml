@model IEnumerable<AquaparkWebApplication1.Models.Hall>

@{
    ViewData["Title"] = "Холи із басейнами";
}

<h1>Наявні холи:</h1>

<p>
    <a asp-action="Create">Додати новий хол</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HallId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoolsMaxDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoolsMinDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallMaxPeople)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallPrice)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HallId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoolsMaxDepth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoolsMinDepth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallMaxPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HallId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.HallId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.HallId">Видалити</a>
            </td>
        </tr>
}
        <a asp-controller="Home" asp-action="Index">Головна сторінка</a>
    </tbody>
</table>
