@model IEnumerable<AquaparkWebApplication1.Models.Ticket>

@{
    ViewData["Title"] = "Квитки";
}

<h1>Наявні квитки:</h1>

<p>
    <a asp-action="Create">Додати новий квиток</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationHall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationSlide)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketStatus)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationHall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationSlide)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketStatus)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Location.HallId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationNavigation.SlideId)
            </td>*@
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.TicketId">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.TicketId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.TicketId">Видалити</a>
            </td>
        </tr>
}
        <a asp-controller="Home" asp-action="Index">Головна сторінка</a>
    </tbody>
</table>
